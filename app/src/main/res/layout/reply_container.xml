<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">



        <RelativeLayout
            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            >

            <RelativeLayout
                android:id="@+id/rlReplyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/reply_container_border"
                android:clipChildren="true"
                android:clipToPadding="true"
                android:minWidth="220dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">


                <TextView
                    android:id="@+id/tvNameReply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/ivReplyImage"
                    android:layout_marginStart="8dp"
                    tools:text="@tools:sample/full_names" />

                <TextView
                    android:id="@+id/tvTextMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="14sp"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/ivReplyImage"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_below="@id/tvNameReply"
                    tools:text="@tools:sample/full_names" />


                <ImageView
                    android:id="@+id/ivReplyImage"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_margin="8dp"
                    android:layout_alignParentEnd="true"
                    android:scaleType="centerCrop"
                    tools:visibility="visible"
                    android:visibility="gone" />


                <ImageView
                    android:id="@+id/ivClose"
                    android:layout_width="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_close_24dp"
                    android:layout_alignParentEnd="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/shimmer_status"
                    android:visibility="visible" />


            </RelativeLayout>


        </RelativeLayout>


</layout>